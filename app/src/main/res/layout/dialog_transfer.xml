<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transfer Money"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="16dp"/>

        <RadioGroup
            android:id="@+id/rgTransferType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbSelf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My Accounts"
                app:buttonTint="@color/colorMonteBlue"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbOthers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Send to User"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From Account"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <Spinner
            android:id="@+id/spFromAccount"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/btn_dropdown"/>

        <LinearLayout
            android:id="@+id/layoutInternal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To Account"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spToAccount"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@android:drawable/btn_dropdown"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutExternal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"> <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipient Details"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/etTargetUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Recipient Username (e.g. admin2)"
                android:inputType="text"
                android:minHeight="48dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/etTargetAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Recipient Account Number (11 digits)"
                android:inputType="number"
                android:maxLength="11"
                android:minHeight="48dp"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etTransferAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="$0.00"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnConfirmTransfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transfer Funds"
            android:backgroundTint="@color/colorMonteBlue"
            android:textColor="#FFF"/>

    </LinearLayout>
</ScrollView>