<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/landing_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="8dp"
        android:background="#F0F0F0">

        <Button
            android:id="@+id/btnAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <?xml version="1.0" encoding="utf-8"?>
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- MAIN CONTENT -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_700">



                    <!-- Big white “panel” card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="23dp"
                        app:cardElevation="39dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="330dp"
                            android:layout_height="550dp"
                            android:orientation="vertical"
                            android:padding="12dp">


                            <!-- Accounts row -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="128dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <!-- Checking Account Card -->
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="12dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="8dp"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="16dp"
                                    app:cardElevation="2dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:padding="12dp">


                                        <TextView
                                            android:id="@+id/tvCheckingTitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Checking Account"
                                            android:textSize="14sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tvCheckingNumber"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:text="xxxxxx1234"
                                            android:textColor="#888888"
                                            android:textSize="11sp" />

                                        <TextView
                                            android:id="@+id/tvCheckingLabel"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:text="Available Balance"
                                            android:textColor="#888888"
                                            android:textSize="11sp" />

                                        <TextView
                                            android:id="@+id/tvCheckingBalance"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:text="$2654.89"
                                            android:textSize="20sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </com.google.android.material.card.MaterialCardView>

                                <!-- Savings Account Card -->
                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="12dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="8dp"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="16dp"
                                    app:cardElevation="2dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:padding="12dp">

                                        <TextView
                                            android:id="@+id/tvSavingsTitle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Savings Account"
                                            android:textSize="14sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tvSavingsNumber"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:text="xxxxxx5678"
                                            android:textColor="#888888"
                                            android:textSize="11sp" />

                                        <TextView
                                            android:id="@+id/tvSavingsLabel"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"
                                            android:text="Available Balance"
                                            android:textColor="#888888"
                                            android:textSize="11sp" />

                                        <TextView
                                            android:id="@+id/tvSavingsBalance"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:text="$500.00"
                                            android:textSize="20sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </com.google.android.material.card.MaterialCardView>
                            </LinearLayout>

                            <!-- Monthly food budget -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:id="@+id/tvBudgetTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Monthly Food Budget Progress"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black" />

                                <ProgressBar
                                    android:id="@+id/pbBudgetProgress"
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:progress="0"
                                    android:max="100" /> <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvAmountSpent"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="$0.00 Spent"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvBudgetLimit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Limit: $500.00"
                                    android:textSize="14sp"
                                    android:textAlignment="viewEnd" />
                            </LinearLayout>

                                <TextView
                                    android:id="@+id/labelUpcomingBills"
                                    android:layout_width="201dp"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="1dp"
                                    android:paddingTop="24dp"
                                    android:paddingEnd="16dp"
                                    android:paddingBottom="8dp"
                                    android:text="Upcoming Bills"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvUpcomingBills"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:nestedScrollingEnabled="false"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginBottom="16dp" />

                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"  android:fitsSystemWindows="true"
            app:menu="@menu/your_menu_file_name" />
    </androidx.drawerlayout.widget.DrawerLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_nav_menu" />



</RelativeLayout>